<p id="notice"><%= notice %></p>

<%= link_to '自分のプロフィールを編集', edit_profile_path(current_user.id), class: "btn btn-outline-secondary" %>

<% @profiles.each do |profile| %>

  <div class="row">
    <div class="col-lg-4 col-md-6 col-sm-12">
      <a href="<%= profile_path(profile) %>">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title"><%= profile.name %></h5>
            <h6 class="card-subtitle mb-2 text-muted"><%= profile.belong_to %> / <%= profile.place %></h6>
            <img src="<%= profile.image %>" style="max-width:64px;max-height:64px;float:left;margin-right:4px;">
            <p class="card-text"><%= if profile.description.present? then profile.description.truncate(100) end %></p>
          </div>
          <div class="card-footer">
            <div style="float:right; font-size: 2em;">
              <% if profile.github.present? then %><%= link_to "https://github.com/#{profile.github}", target: :_blank do %><i class="fab fa-github"></i><% end end %>
              <% if profile.twitter.present? then %><%= link_to "https://twitter.com/#{profile.twitter}", target: :_blank do %><i class="fab fa-twitter"></i><% end end %>
              <% if profile.facebook.present? then %><%= link_to "https://facebook.com/#{profile.facebook}", target: :_blank do %><i class="fab fa-facebook"></i><% end end %>
              <% if profile.web.present? then %><%= link_to profile.web, target: :_blank do %><i class="fas fa-link"></i><% end end %>
            </div>
          </div>
        </div>
      </a>
    </div>
  </div>

<% end %>
